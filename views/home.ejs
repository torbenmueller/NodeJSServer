<%- include("header") -%>

<h1 class="mb-5">Welcome to your Address Book!</h1>


    <div class="list-group">
        <a class="list-group-item list-group-item-action active">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">Your personal Address Book</h5>
            <small>3 days ago</small>
          </div>
          <p class="mb-1">Press "Add Address" to create a new entry.</p>
        </a>
        <% addressList.forEach (element => { %>
        <form action="/delete" method="post">
            <a class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= element.name + ", " + element.phone + ", " + element.index%></h5>
                <input type="checkbox" name="checkbox" value="<%=element.index%>" onChange="this.form.submit()">
                <button type="button" name="deleteButton" value="<%=element.name%>" class="btn btn-link" onClick="this.form.submit(value)"><i class="fas fa-trash-alt"></i></button>
            </div>
            </a>
        </form>
        <% }); %>
        <div class="row justify-content-center mt-5">
            <a class="btn btn-success" href="/add-address" role="button">Add Address</a>
        </div>
    </div>

<%- include("footer") -%>